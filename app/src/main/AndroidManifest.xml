<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.my_library">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/book_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/book_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebsiteActivity"></activity>
        <activity android:name=".CurrentlyReadingBooksActivity"
            android:label="@string/activity_currently_reading"/>
        <activity android:name=".FavoritesBooksActivity"
            android:label="@string/activity_favorites_books"/>
        <activity android:name=".WantToReadActivity"
            android:label="@string/activity_want_to_read"/>
        <activity android:name=".AlreadyReadBooksActivity"
            android:label="@string/activity_already_read"/>
        <activity android:name=".BookActivity"
            android:label="@string/activity_book"/>
        <activity android:name=".AllBooksActivity"
            android:label="@string/activity_all_books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>